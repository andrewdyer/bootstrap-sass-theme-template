{
  "name": "bootstrap-sass-theme-template",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewdyer/bootstrap-sass-theme-template.git"
  },
  "homepage": "https://github.com/andrewdyer/bootstrap-sass-theme-template",
  "main": "dist/styles.css",
  "style": "dist/styles.css",
  "sass": "src/scss/styles.scss",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "sass --watch src/scss/styles.scss dist/styles.css --no-source-map",
    "build": "npm run clean && sass src/scss/styles.scss dist/styles.css --no-source-map",
    "build:min": "npm run clean && sass src/scss/styles.scss dist/styles.min.css --style=compressed --no-source-map",
    "clean": "rimraf dist",
    "format": "prettier --write '**/*.{scss,css,js,json,md}'",
    "lint": "stylelint '**/*.scss'",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build && npm run build:min"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1"
  },
  "lint-staged": {
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
