{
  "name": "bootstrap-sass-template",
  "description": "A template for building consistent, token-driven themes using the Bootstrap framework and the Sass preprocessor, with a modular and scalable architecture for design systems.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewdyer/bootstrap-sass-template.git"
  },
  "homepage": "https://github.com/andrewdyer/bootstrap-sass-template",
  "type": "module",
  "scripts": {
    "dev": "sass --watch src/scss/styles.scss dist/styles.css --no-source-map",
    "build": "sass src/scss/styles.scss dist/styles.css --no-source-map",
    "build:min": "sass src/scss/styles.scss dist/styles.min.css --style=compressed --no-source-map",
    "clean": "rm -rf dist && mkdir dist"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "sass": "^1.93.2"
  }
}
