{
  "name": "bootstrap-sass-theme-template",
  "version": "0.1.0",
  "homepage": "https://github.com/andrewdyer/bootstrap-sass-theme-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewdyer/bootstrap-sass-theme-template.git"
  },
  "main": "dist/css/styles.css",
  "style": "dist/css/styles.css",
  "sass": "src/scss/styles.scss",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:sass": "sass src/scss/styles.scss dist/css/styles.css --no-source-map",
    "build:sass:min": "sass src/scss/styles.scss dist/css/styles.min.css --style=compressed --no-source-map",
    "build:postcss": "postcss dist/css/styles.css -o dist/css/styles.css",
    "build:postcss:min": "postcss dist/css/styles.min.css -o dist/css/styles.min.css",
    "build": "npm run clean && npm run build:sass && npm run build:sass:min && npm run build:postcss && npm run build:postcss:min",
    "watch:sass": "sass --watch src/scss/styles.scss dist/css/styles.css --no-source-map",
    "watch:sass:min": "sass --watch src/scss/styles.scss dist/css/styles.min.css --style=compressed --no-source-map",
    "watch:postcss": "onchange 'dist/css/styles.css' -- postcss dist/css/styles.css -o dist/css/styles.css",
    "watch:postcss:min": "onchange 'dist/css/styles.min.css' -- postcss dist/css/styles.min.css -o dist/css/styles.min.css",
    "dev": "npm run watch:sass & npm run watch:sass:min & npm run watch:postcss & npm run watch:postcss:min",
    "format": "prettier --write '**/*.{scss,css,js,json,md}'",
    "lint": "stylelint '**/*.scss'",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "onchange": "^7.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
